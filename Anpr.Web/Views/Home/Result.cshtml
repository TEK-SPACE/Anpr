@model ANPR.Models.ImageResponse
@{
    Layout = "";
}

<!DOCTYPE HTML>
<html lang="en">
<head>
    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <style>
        body {
            width: 90%;
            margin: 0 auto;
        }

        .mainContent {
            width: 100%;
            height: auto;
        }

        .headImage {
            max-width: 100%;
            max-height: 400px;
            display: block;
            margin: 0 auto;
        }

        .plateSearch {
            width: 96%;
            height: 2em;
            margin-left: 2%;
            margin-right: 2%;
        }

        .box {
            width: 100%;
            height: auto;
        }

        .row {
            width: 100%;
            height: 40px;
            margin: 7px;
            display: inline-block;
        }



        ul li {
            list-style: none;
        }

        .lblConfidence {
            width: 44%;
            padding: 5px;
            height: auto;
            float: left;
            text-align: -webkit-center;
            background: white;
            margin: 5px;
            border: 2px solid #FFA500;
            font-weight: bold;
        }

        .enterImg {
            width: 4%;
            float: left;
            padding-top: 7px;
            max-width: 30px;
        }
    </style>
</head>
<body>
    <div class="mainContent">
        <form>
            <img class="headImage" src="/images/headimg.jpg">
            <br />
            <div class="box">
                <input class="plateSearch" type="text" name="firstname" placeholder="Enter plate">
            </div>
            @foreach (var result in Model.Results)
            {
                <ul>
                    @foreach (var candidate in result.Candidates)
                    {
                        <li class="row">
                            <label class="lblConfidence" type="label" name="label1">@Math.Round(candidate.Confidence, 2)</label>
                            <label class="lblConfidence" type="label" name="label1">@candidate.Plate</label>
                            <img class="enterImg" src="/images/enter1.png">
                        </li>
                    }
                </ul>
            }
            <input type="reset" value="Cancel">
        </form>
    </div>
</body>
</html>
