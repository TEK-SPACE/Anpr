@model ANPR.Models.ImageResponse
@{
    Layout = "";
}

<!DOCTYPE HTML>
<html lang="en">
<head>
    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <style>
        body {
            width: 90%;
            margin: 0 auto;
        }

        .mainContent {
            width: 100%;
            height: auto;
        }

        .headImage {
            max-width: 100%;
            max-height: 400px;
            display: block;
            margin: 0 auto;
        }

        .plateSearch {
            width: 96%;
            height: 2em;
            margin-left: 2%;
            margin-right: 2%;
        }

        .box {
            width: 100%;
            height: auto;
        }

        .row {
            width: 100%;
            height: 40px;
            /*margin: 7px;*/
            display: inline-block;
        }


        ul {
            padding: 0;
        }

            ul li {
                list-style: none;
            }

        .lblConfidence {
            width: 44%;
            /*padding: .5em 0 .5em 0;*/
            float: left;
            text-align: -webkit-center;
            /*margin: 5px;*/
            /*border: 2px solid #FFA500;*/
            font-weight: bold;
        }

            .lblConfidence span {
                background: white;
                padding: .4em;
                border: .1em solid black;
                width: 150px;
                display: inline-block;
                margin-top: .2em;
                margin-bottom: .2em;

            }

        .enterImg {
            /*width: 4%;*/
            height: 100%;
            float: right;
            /*max-width: 30px;*/
            display: inline-block;
            vertical-align: middle;
                /*padding-right: .2em;*/
        }

        .violation {
            background: red;
        }

        .expired {
            background: orange;
        }

        .nomatch {
            background: gray;
        }

        .validPayment {
            background: green;
        }

        .empty {
            background: #b0e0e6;
        }

        .cancelButton {
            margin: 0 auto;
            padding: 4px;
            background: #ccc;
            color: black;
            display: block;
        }
    </style>
</head>
<body>
    <div class="mainContent">
        <form>
            <img class="headImage" src="../@ViewBag.FilePath">
            <br />
            <div class="box">
                <input class="plateSearch" type="text" name="firstname" placeholder="Enter plate">
            </div>
            @foreach (var result in Model.Results)
            {
                <ul>
                    @foreach (var candidate in result.Candidates)
                    {
                        <li class="row @candidate.AssignedClass">
                            <label class="lblConfidence"> <span> @Math.Round(candidate.Confidence, 2)</span></label>
                            <label class="lblConfidence"><span>@candidate.Plate</span></label>
                            <img class="enterImg" src="~/images/enter1.png">
                        </li>
                    }
                </ul>
            }
            <input type="reset" class="cancelButton" value="Cancel">
        </form>
    </div>
</body>
</html>
